doctype html
html
  head
    title= title
    link(rel="stylesheet", href="../css/bootstrap.min.css")

    link(href="../fonts/css/font-awesome.min.css", rel="stylesheet")
    link(href="../css/animate.min.css", rel="stylesheet")

    link(href="../css/custom2.css", rel="stylesheet")
    link(href="../css/icheck/flat/green.css", rel="stylesheet")

    link(href="http://netdna.bootstrapcdn.com/font-awesome/3.0.2/css/font-awesome.css", rel="stylesheet")
    link(href="../css/editor/external/google-code-prettify/prettify.css", rel="stylesheet")
    link(href="../css/editor/index.css", rel="stylesheet")

    link(href="../css/select/select2.min.css" rel="stylesheet")

    link(rel="stylesheet" href="../css/switchery/switchery.min.css")

    script(src="../js/jquery.min.js")

  body.nav-md
    .container.body
      .main_container
        .col-md-3.left_col
          .left_col.scroll-view
            div(style="border: 0;").navbar.nav_title
              a(href="/dashboard").site_title
                i.fa.fa-paw
                span Healt Center
            .clearfix

            .profile
              .profile_pic: img(src="../images/img.jpg", alt="...").img-circle.profile_img
              .profile_info
                span Bienvenido,
                h2=userName
            br/

            div(id="sidebar-menu").main_menu_side.hidden-print.main_menu
              .menu_section
                h3 General
                ul.nav.side-menu
                  li.active
                    a
                      i.fa.fa-home
                        | Usuarios
                      span.fa.fa-chevron-down
                    ul(style="display: none").nav.child_menu
                      li.current-page
                        a(href="/users") Usuarios
                      li
                        a(href="#") Permisos
                      li
                        a(href="#") Catalogos
                  li
                    a
                      i.fa.fa-edit
                        | Reportes
                      span.fa.fa-chevron-down
                    ul(style="display: none").nav.child_menu
                      li
                        a(href="/reports") Reporte de usuarios
                      li
                        a(href="#") Reporte de Pacientes
                      li
                        a(href="#") Reporte de Consultas
                      li
                        a(href="#") Reporte de Citas

            .sidebar-footer.hidden-small
              a(data-toggle="tooltip", data-placement="top", title="Configuraciones")
                span(aria-hidden="true").glyphicon.glyphicon-cog
              a(data-toggle="tooltip" data-placement="top" title="FullScreen")
                span(aria-hidden="true").glyphicon.glyphicon-fullscreen
              a(data-toggle="tooltip" data-placement="top" title="Lock")
                span(aria-hidden="true").glyphicon.glyphicon-eye-close
              a(data-toggle="tooltip" data-placement="top" title="Salir" href="/logout")
                span(aria-hidden="true").glyphicon.glyphicon-off

        .top_nav
          .nav_menu
            nav(role="navigation")
              .nav.toggle
                a(id="menu_toggle")
                  i.fa.fa-bars
              ul.nav.navbar-nav.navbar-right
                li
                  a(href="javascript:;", data-toggle="dropdown", aria-expanded="false").user-profile.dropdown-toggle
                    img(src="../images/img.jpg" alt="user")
                    span= userName
                    span.fa.fa-angle-down
                  ul.dropdown-menu.dropdown-usermenu.animated.fadeInDown.pull-right
                    li
                      a(href="#") Perfil
                    li
                      a(href="#")
                        span.badge.bg-red.pull-right 50%
                        span Settings
                    li
                      a(href="#") Ayuda
                    li
                      a(href="/logout")
                        i.fa.fa-sign-out.pull-right
                          | Salir

        div(role="main").right_col
          div
            block content


          footer
            div
              p.pull-right
                | Healt Center! Todos los derechos reservados 2015
                a(href="#") djenguaLabs.
            .clearfix



    script( src="../js/bootstrap.min.js")
    script(src="../js/chartjs/chart.min.js")
    script(src="../js/progressbar/bootstrap-progressbar.min.js")
    script(src="../js/nicescroll/jquery.nicescroll.min.js")
    script(src="../js/icheck/icheck.min.js")
    script(src="../js/custom2.js")

    script(src="../js/graph.js")
