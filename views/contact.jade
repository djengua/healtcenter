extends layout

block content

  section(id="about").bg-primary
    .container
      div.row
        div.col-lg-8.col-lg-offset-2.text-center
          h2.section-heading Contact
          hr.light
          div.row
          
  .container
    div.row
      div.col-md-8.col-md-offset-4.section_header.thin
        h2 Contacto
        div.subtitle.body-bg_section
          div.container
            p.uppercase Dejanos tus comentarios y e-mail y nos pondremos en contacto contigo.
  .container
    div.row
      div.col-md-8.col-md-offset-4
        div.input-group
          span Nombre:
          input(id="txtnombre").form-control
        div.input-group
          span Email:
          input(id="txtemail").form-control
        div.input-group
          span Comentarios:
          textarea(rows="3" id="txtcoments").form-control

    div.row
      div.col-md-8.col-md-offset-4
        div.input-group
          button(type="submit").btn.btn-default Enviar
